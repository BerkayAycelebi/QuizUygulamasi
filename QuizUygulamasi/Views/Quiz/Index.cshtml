@model IEnumerable<QuizUygulamasi.Models.Quiz>

@{
    ViewData["Title"] = "Quizler";
}

<h1>Quizler</h1>

<p>
    <a asp-action="Create">Yeni Quiz Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Sorular</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a> |
                    <a asp-action="EnterLobby" asp-route-id="@item.Id">Quize Gir</a>
                </td>
            </tr>
        }
    </tbody>
</table>